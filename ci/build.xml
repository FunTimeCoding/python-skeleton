<?xml version="1.0" encoding="UTF-8"?>
<project name="python-skeleton" default="build" basedir="../">
    <property name="workspace" value="${basedir}"/>
    <property name="current_dir" value="${workspace}/ci"/>

    <target name="build" depends="tests"/>

    <target name="clean">
        <delete dir="${current_dir}/build"/>
    </target>

    <target name="prepare" depends="clean">
        <mkdir dir="${current_dir}/build/log"/>
    </target>

    <target name="tests" depends="prepare">
        <exec executable="bash">
            <arg value="-l"/>
            <arg value="-c"/>
            <arg value="nosetests -c ci/nose.ini"/>
        </exec>
    </target>
</project>
